{{!-- display all posts on the home page --}}
{{#each posts}}
<div class="card m-2">
    <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{text}}</p>
        <p class="mb-2 ">{{user.username}}</p>
        {{#if ../loggedIn}}
        <a role="button" class="btn btn-primary" href="/post/{{id}}">Comment on Post</a>
        {{/if}}
    </div>
</div>
{{/each}}