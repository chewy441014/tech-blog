<div class="row d-flex justify-content-center">
<div class="col-lg-4">
<form id="editPost">
  <div class="form-outline mb-4">
    <input id="title" class="form-control" value="{{post.title}}" />
  </div>
  <div class="form-outline mb-4">
    <input id="text" class="form-control" value="{{post.text}}" />
  </div>
  <input id="postid" type="hidden" value="{{post.id}}"/>
  <button type="submit" class="btn btn-primary btn-block mb-4">Publish Edit</button>
</form>
</div>
</div>

<script src="/js/editpost.js"></script>