<div class="card m-2">
    <div class="card-body">
        <h5 class="card-title">{{post.title}}</h5>
        <p class="card-text">{{post.text}}</p>
        <p class="mb-2">{{post.user.username}}</p>
    </div>
    <form id="createComment">
        <div class="form-outline mb-4">
            <input id="text" class="form-control" placeholder="comment text" />
        </div>
        <input id="postid" type="hidden" value="{{post.id}}"/>
        <button type="submit" class="btn btn-primary btn-block mb-4">Add Comment</button>
    </form>
</div>

{{#each post.comments}}
<div class="card m-2">
    <div class="card-body">
        <h5 class="card-title">{{this.user.username}}</h5>
        <p class="card-text">{{this.text}}</p>
    </div>
</div>
{{/each}}

<script src="/js/comment.js"></script>